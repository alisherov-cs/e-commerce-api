generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_TEST")
}

model ShopInfo {
  id            Int         @id @default(autoincrement())
  address       String
  phoneNumber   String
  email         String
  openAt        OpenAt[]
  socialMedia   SocialMedia[]
}

model OpenAt {
  id            Int         @id @default(autoincrement())
  weekDayFrom   WeekDay
  weekDayTo     WeekDay
  timeFrom      DateTime
  timeTo        DateTime
  shopInfoId    Int
  shopInfo      ShopInfo    @relation(fields: [shopInfoId], references: [id])
}

model SocialMedia {
  id            Int         @id @default(autoincrement()) 
  name          String
  link          String
  shopInfoId    Int
  shopInfo      ShopInfo    @relation(fields: [shopInfoId], references: [id])
}

enum WeekDay {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model User {
  id            Int         @id @default(autoincrement())
  email         String      @unique
  password      String
  roles         Role[]
}

enum Role {
    admin
    user
}
